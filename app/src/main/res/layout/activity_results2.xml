<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#004673"
    android:layout_height="match_parent"
    tools:context=".Results">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:text="Your conversion \n Results"
        android:gravity="center"
        android:textSize="30sp"
        android:id="@+id/title"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:textColor="@color/white"
        android:text="old Currency"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:id="@+id/oldCurrency"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/oldCurrency"
        android:textColor="@color/white"
        android:text="old Amount"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:id="@+id/oldAmount"/>
    <ImageView
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_circle_down_24"
        app:layout_constraintTop_toBottomOf="@+id/oldAmount"
        android:id="@+id/arrow"
        android:minWidth="75dp"
        android:minHeight="75dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/arrow"
        android:textColor="@color/white"
        android:text="new Amount"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:id="@+id/newAmount"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/newAmount"
        android:textColor="@color/white"
        android:text="new Currency"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:id="@+id/newCurrency"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="#ffffff"
        android:text="Back to Calculator"
        android:textColor="@color/black"
        android:id="@+id/btn"/>


</androidx.constraintlayout.widget.ConstraintLayout>